.page-content {
  height: 100vh;
  box-sizing: border-box;
  padding: 150rpx 24rpx 120rpx 24rpx;
  background-color: #fff;
}

.container {
  background-color: #fff;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

.community-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.post-card {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.post-content {
  flex: 1;
}

.username {
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.text {
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.images {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.images image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  border-top: 1rpx solid #e0e0e0; 
  z-index: 1000;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #999;
}

.tab-item.active {
  color: #4CAF50; 
}