.page-content {
  height: 100vh;
  box-sizing: border-box;
  padding: 150rpx 24rpx 120rpx 24rpx;
  background-color: #fff;
}

.container {
  background-color: #fff;
  min-height: 100vh;
  padding-bottom: 80rpx;
}

.status-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 24rpx;
  color: #757575;
}

.search-bar {
  display: flex;
  align-items: center, middle;
  background-color: #f1f1f1;
  border-radius: 40rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.see-all {
  font-size: 28rpx;
  color: #4CAF50;
}

.trip-cards {
  display: flex;
  flex-direction: row;
  overflow-x: scroll;
  overflow-y: visible;
  gap: 50rpx;
}

.trip-card {
  width: 320rpx;
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  margin: 7rpx;
}

.trip-image {
  height: 200rpx;
  background-size: cover;
  background-position: center;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}

.trip-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  color: #fff;
}

.trip-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.trip-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.9;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  border-top: 1rpx solid #e0e0e0; 
  z-index: 1000;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #999;
}

.tab-item.active {
  color: #4CAF50; 
}